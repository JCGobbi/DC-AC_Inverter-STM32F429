{
   // See https://go.microsoft.com/fwlink/?LinkId=733558
   // for the documentation about the tasks.json format
   "version": "2.0.0",
   "tasks": [
      //
      // Ada: gprbuild check syntax active file
      //
      {
         "label": "Ada: gprbuild check syntax active file",
         "type": "shell",
         "command": "gprbuild",
         "args": [
            "-q",
            "-f",
            "-c",
            "-gnats",
            "-u",
            "-P",
            "*.gpr",
            "${file}"
         ],
         "options": {
            "cwd": "${workspaceFolder}"
         },
         "group": "build",
         "problemMatcher": []
      },
      //
      // Ada: gprbuild check semantic active file
      //
      {
         "label": "Ada: gprbuild check semantic active file",
         "type": "shell",
         "command": "gprbuild",
         "args": [
            "-q",
            "-f",
            "-c",
            "-gnatc",
            "-u",
            "-P",
            "*.gpr",
            "${file}"
         ],
         "options": {
            "cwd": "${workspaceFolder}"
         },
         "group": "build",
         "problemMatcher": []
      },
      //
      // Ada: gprbuild compile active file
      //
      {
         "label": "Ada: gprbuild compile active file",
         "type": "shell",
         "command": "gprbuild",
         "args": [
            "-ws",
            "-f",
            "-c",
            "-u",
            "-P",
            "*.gpr",
            "${file}"
         ],
         "options": {
            "cwd": "${workspaceFolder}"
         },
         "group": "build",
         "problemMatcher": []
      },
      //
      // Ada: gprbuild build active project
      //
      {
         "label": "Ada: gprbuild build active project",
         "type": "shell",
         "command": "gprbuild",
         "args": [
            "-P",
            "*.gpr"
         ],
         "options": {
            "cwd": "${workspaceFolder}"
         },
         "group": {
            "kind": "build",
            "isDefault": true
         },
         "problemMatcher": []
      },
      //
      // Ada: gprbuild clean active project
      //
      {
         "label": "Ada: gprbuild clean active project",
         "type": "shell",
         "command": "gprclean",
         "args": [
            "-r",
            "-P",
            "*.gpr"
         ],
         "options": {
            "cwd": "${workspaceFolder}"
         },
         "group": "build",
         "problemMatcher": []
      },
      //
      // Ada: flash elf file to board with STM32CubeProgrammer
      //
      {
         "label": "Ada: flash elf file to board with STM32CubeProgrammer",
         "type": "shell",
         "command": "/opt/STMicroelectronics/STM32CubeProgrammer/bin/STM32_Programmer_CLI",
         "args": [
            "--connect",
            "port=SWD",
            "freq=4000",
            "ap=0",
            "mode=UR",
            "--write",
            "exec/*.elf",
            "-rst"
         ],
         "options": {
            "cwd": "${workspaceFolder}"
         },
         "group": "test",
         "problemMatcher": []
      },
      //
      // Ada: convert elf file to hex file
      //
      {
         "label": "Ada: convert elf file to hex file",
         "type": "shell",
         "command": "arm-eabi-objcopy",
         "args": [
            "-S",
            "-O",
            "ihex",
            "exec/*.elf",
            "exec/main.hex"
         ],
         "options": {
            "cwd": "${workspaceFolder}"
         },
         "group": "test",
         "problemMatcher": []
      },
      //
      // Ada: flash hex file to board with st-link
      //
      {
         "label": "Ada: flash hex file to board with st-link",
         "dependsOrder": "sequence",
         "dependsOn": ["Ada: convert elf file to hex file"],
         "type": "shell",
         "command": "st-flash",
         "args": [
            "--connect-under-reset",
            "--reset",
            "--format",
            "ihex",
            "write",
            "exec/main.hex"
         ],
         "options": {
            "cwd": "${workspaceFolder}"
         },
         "group": "test",
         "problemMatcher": []
      },
      //
      // Ada: flash hex file to board with STM32CubeProgrammer
      //
      {
         "label": "Ada: flash hex file to board with STM32CubeProgrammer",
         "dependsOrder": "sequence",
         "dependsOn": ["Ada: convert elf file to hex file"],
         "type": "shell",
         "command": "/opt/STMicroelectronics/STM32CubeProgrammer/bin/STM32_Programmer_CLI",
         "args": [
            "--connect",
            "port=SWD",
            "freq=4000",
            "ap=0",
            "mode=UR",
            "--write",
            "exec/main.hex",
            "-rst"
         ],
         "options": {
            "cwd": "${workspaceFolder}"
         },
         "group": "test",
         "problemMatcher": []
      },
      //
      // Ada: convert elf file to bin file
      //
      {
         "label": "Ada: convert elf file to bin file",
         "type": "shell",
         "command": "arm-eabi-objcopy",
         "args": [
            "-S",
            "-O",
            "binary",
            "exec/*.elf",
            "exec/main.bin"
         ],
         "options": {
            "cwd": "${workspaceFolder}"
         },
         "group": "test",
         "problemMatcher": []
      },
      //
      // Ada: flash bin file to board with st-link
      //
      {
         "label": "Ada: flash bin file to board with st-link",
         "dependsOrder": "sequence",
         "dependsOn": ["Ada: convert elf file to bin file"],
         "type": "shell",
         "command": "st-flash",
         "args": [
            "--connect-under-reset",
            "--reset",
            "--format",
            "binary",
            "write",
            "exec/main.bin",
            "0x08000000"
         ],
         "options": {
            "cwd": "${workspaceFolder}"
         },
         "group": "test",
         "problemMatcher": []
      },
      //
      // Ada: flash bin file to board with STM32CubeProgrammer
      //
      {
         "label": "Ada: flash bin file to board with STM32CubeProgrammer",
         "dependsOrder": "sequence",
         "dependsOn": ["Ada: convert elf file to hex file"],
         "type": "shell",
         "command": "/opt/STMicroelectronics/STM32CubeProgrammer/bin/STM32_Programmer_CLI",
         "args": [
            "--connect",
            "port=SWD",
            "freq=4000",
            "ap=0",
            "mode=UR",
            "--write",
            "exec/main.bin",
            "0x08000000",
            "-rst"
         ],
         "options": {
            "cwd": "${workspaceFolder}"
         },
         "group": "test",
         "problemMatcher": []
      }
   ]
}
